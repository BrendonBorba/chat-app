<section class="flex flex-col w-full">
  <span class="text-white text-center font-semibold mt-5"><%= current_user.email %></span>
  <div class="flex items-center justify-center mt-2">
    <%= button_to 'Log_out', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'px-3 py-1 text-white bg-red-700 rounded font-semibold text-sm' %>
  </div>
  <h3 class="text-white font-bold text-xl mt-3 text-center mb-2">My Rooms</h3>

  <div class="flex flex-col px-5 gap-2 w-full", id="user_<%= current_user.id %>_rooms">
    <% if current_user.rooms.any? %>
      <% current_user.rooms.each do |room| %>
        <%= render 'shared/room', { room: room } %>
      <% end %>
    <% else %>
      <p class="text-white text-center text-sm">Nothing for show!</p>
    <% end %>
  </div>
</section>